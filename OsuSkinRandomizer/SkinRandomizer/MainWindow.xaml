<Window x:Class="SkinRandomizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkinRandomizer"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="300" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid x:Name="upperGrid" Grid.Row="0">
            <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Stretch">
                <Button Content="Change OSU directory" Margin="10,10,10,10"/>
                <TextBox Text="{Binding OsuFolder}" Margin="0,10,0,10" HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Grid>

        <Grid x:Name="lowerGrid" Grid.Row="1">
            <StackPanel>
                <Button x:Name="btn_total_random_debug" Content="Total Random Skin" Margin="20,20,20,20" Click="Button_Click"/>
                <Button x:Name="btn_playable_debug" Content="Playable Random Skin" Margin="20,20,20,20" Click="btn_playable_debug_Click"/>
            </StackPanel>
            

        </Grid>
        
        
    </Grid>
</Window>
